{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"importsNotUsedAsValues": "error",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		// "noUncheckedIndexedAccess": true, // need some null handling before turning on
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "out",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "es6"
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
