{
  "name": "terra-wdio-helper",
  "displayName": "Terra WDIO Helper",
  "description": "A tool to help analyze Terra WDIO test results",
  "icon": "resources/images/extensionIcon.png",
  "version": "1.0.0",
  "publisher": "juzerzarif",
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/juzerzarif/terra-wdio-helper.git"
  },
  "bugs": {
    "url": "https://github.com/juzerzarif/terra-wdio-helper/issues",
    "email": "juzerapj@gmail.com"
  },
  "author": {
    "name": "Juzer Zarif",
    "url": "https://juzerzarif.com"
  },
  "homepage": "https://github.com/juzerzarif/terra-wdio-helper/blob/master/README.md",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#EC4F1F",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terraWdioHelper.displaySnapshot",
        "title": "Open Snapshot"
      },
      {
        "command": "terraWdioHelper.deleteSnapshot",
        "title": "Delete Snapshot",
        "icon": {
          "dark": "resources/images/delete_icon_dark.svg",
          "light": "resources/images/delete_icon_light.svg"
        }
      },
      {
        "command": "terraWdioHelper.deleteDiffSnapshot",
        "title": "Delete diffs"
      },
      {
        "command": "terraWdioHelper.deleteSpec",
        "title": "Delete Spec",
        "icon": {
          "dark": "resources/images/delete_icon_dark.svg",
          "light": "resources/images/delete_icon_light.svg"
        }
      },
      {
        "command": "terraWdioHelper.deleteDiffSpec",
        "title": "Delete diffs"
      },
      {
        "command": "terraWdioHelper.refreshSnapshotTree",
        "title": "Refresh",
        "icon": {
          "dark": "resources/images/refresh_icon_dark.svg",
          "light": "resources/images/refresh_icon_light.svg"
        }
      }
    ],
    "configuration": [
      {
        "title": "Terra WDIO Helper",
        "properties": {
          "terraWdioHelper.wdioTestFolderRelativePath": {
            "type": "string",
            "default": "tests/wdio",
            "description": "Path to the WDIO test folder relative to the workspace root. This folder must contain a __snapshots__ directory."
          }
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "terraWdioHelper.refreshSnapshotTree",
          "when": "view == terraWdioHelper",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "terraWdioHelper.deleteSnapshot",
          "when": "view == terraWdioHelper && viewItem == wdioSnapshot",
          "group": "inline"
        },
        {
          "command": "terraWdioHelper.deleteDiffSnapshot",
          "when": "view == terraWdioHelper && viewItem == wdioSnapshot"
        },
        {
          "command": "terraWdioHelper.deleteSpec",
          "when": "view == terraWdioHelper && viewItem == wdioSpec",
          "group": "inline"
        },
        {
          "command": "terraWdioHelper.deleteDiffSpec",
          "when": "view == terraWdioHelper && viewItem == wdioSpec"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "terraWdioHelper",
          "name": "Terra WDIO Helper"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint:ts": "tslint -p ."
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/rimraf": "^2.0.3",
    "@types/vscode": "^1.38.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "tslint": "^5.20.0",
    "typescript": "^3.7.2",
    "vscode-test": "^1.2.2"
  },
  "dependencies": {
    "rimraf": "^3.0.0"
  }
}
